<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_custom_layout_judul"
        android:text="Apakah anda yakin\n untuk menghapus??"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_yes"
        android:text="Ya"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/btn_no"
        android:backgroundTint="@color/dark_red"
        app:layout_constraintTop_toBottomOf="@id/tv_custom_layout_judul"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_no"
        android:text="Tidak"
        app:layout_constraintStart_toEndOf="@id/btn_yes"
        android:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="@id/btn_yes"
        app:layout_constraintBottom_toBottomOf="@id/btn_yes"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>